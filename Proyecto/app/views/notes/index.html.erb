<h1>Listing notes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Email</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
    <td><%= note.content %></td>
    <td><%= note.email %></td>
    <td><%= note.date %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

